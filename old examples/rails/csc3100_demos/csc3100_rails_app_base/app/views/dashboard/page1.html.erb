<h1>Experiences</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Company</th>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id = "experienceList">
    <% @exp.each do |experience| %>
      <tr>
        <td data-toggle="modal" data-target="#myModal"><%= experience.start_date %></td>
        <td data-toggle="modal" data-target="#myModal"><%= experience.end_date %></td>
        <td data-toggle="modal" data-target="#myModal"><%= experience.name %></td>
        <td data-toggle="modal" data-target="#myModal"><%= experience.description %></td>
        <!--td>
        </td-->
        <td><%= link_to 'Edit', edit_experience_path(experience) %>
                    <span class="glyphicon glyphicon-edit"></span> 
        </td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %>
            <span class="glyphicon glyphicon-remove"></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experience', new_experience_path %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Hello</h4>
      </div>
      <div class="modal-body" id="myModalBody">
        World
      </div>
    </div>
  </div>
</div>