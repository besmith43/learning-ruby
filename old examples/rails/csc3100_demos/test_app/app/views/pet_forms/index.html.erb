<p id="notice"><%= notice %></p>

<h1>Pet Forms</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Date since</th>
      <th>Phone</th>
      <th>Owner name</th>
      <th>Pet name</th>
      <th>Color</th>
      <th>Collar</th>
      <th>Tags</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Size</th>
      <th>Spayed neutered</th>
      <th>Area</th>
      <th>Comments</th>
      <th>Lost found</th>
      <th>Pending</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_forms.each do |pet_form| %>
      <tr>
        <td><%= pet_form.date %></td>
        <td><%= pet_form.date_since %></td>
        <td><%= pet_form.phone %></td>
        <td><%= pet_form.owner_name %></td>
        <td><%= pet_form.pet_name %></td>
        <td><%= pet_form.color %></td>
        <td><%= pet_form.collar %></td>
        <td><%= pet_form.tags %></td>
        <td><%= pet_form.breed %></td>
        <td><%= pet_form.gender %></td>
        <td><%= pet_form.size %></td>
        <td><%= pet_form.spayed_neutered %></td>
        <td><%= pet_form.area %></td>
        <td><%= pet_form.comments %></td>
        <td><%= pet_form.lost_found %></td>
        <td><%= pet_form.pending %></td>
        <td><%= link_to 'Show', pet_form %></td>
        <td><%= link_to 'Edit', edit_pet_form_path(pet_form) %></td>
        <td><%= link_to 'Destroy', pet_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

